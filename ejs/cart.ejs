                    </ul>
                </div>

                <!-- Quick Link Section -->
                <div class="col-md-2">
                    <h6 class="footer-title">Quick Link</h6>
                    <ul class="footer-links">
                        <li><a href="/privacy">Privacy Policy</a></li>
