                <a class="navbar-brand fw-bold" href="/">
                    <span class="menu-icon">‚ò∞</span> CHRONIFY
                </a>
                <a class="nav-link ms-3" href="/">Home</a>
                
                <div class="ms-auto d-flex align-items-center gap-3">
                    <!-- Search Bar -->
                    <div class="search-bar">
                        <input type="text" placeholder="What are you looking for?" class="form-control form-control-sm">
                        <button class="btn btn-sm btn-link"><i class="bi bi-search"></i></button>
                    </div>
                    
                    <!-- Icons -->
                    <a href="/wishlist" class="icon-link" title="Wishlist">‚ù§Ô∏è</a>
                    <a href="/cart" class="icon-link active" title="Cart">üõí</a>
                    <a href="/profile" class="icon-link" title="Profile">üë§</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container-fluid py-5">
        <div class="row">
            <!-- Cart Items Section -->
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="cart-title">CART</h1>
                    <% if (cartItems && cartItems.length > 0) { %>
                        <button class="btn btn-danger btn-sm" onclick="emptyCart()">Empty my Cart</button>
                    <% } %>
                </div>

                <!-- Cart Items List -->
                <% if (cartItems && cartItems.length > 0) { %>
                    <div class="cart-items-container">
                        <% cartItems.forEach((item, index) => { %>
                            <div class="cart-item-card mb-4">
                                <div class="row align-items-center">
                                    <!-- Product Image -->
                                    <div class="col-md-2">
                                        <div class="product-image-box">
                                            <img src="<%= item.image %>" alt="<%= item.name %>" class="img-fluid rounded">
                                        </div>
                                    </div>

                                    <!-- Product Details -->
                                    <div class="col-md-4">
                                        <h5 class="product-name"><%= item.name %></h5>
                                        <p class="product-price">Price: <%= item.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></p>
                                        <p class="product-color">Colour: <strong><%= item.color %></strong></p>
                                    </div>

                                    <!-- Quantity Selector -->
                                    <div class="col-md-3">
                                        <div class="quantity-control">
                                            <form method="POST" action="/cart/update/<%= item.id %>" class="d-flex align-items-center gap-2">
                                                <button type="button" class="btn btn-outline-secondary btn-sm qty-btn" onclick="decreaseQty(this)">‚àí</button>
                                                <input type="number" name="quantity" value="<%= item.quantity %>" class="form-control form-control-sm qty-input" min="1" max="10">
                                                <button type="button" class="btn btn-outline-secondary btn-sm qty-btn" onclick="increaseQty(this)">+</button>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Remove Button -->
                                    <div class="col-md-3 text-end">
                                        <form method="POST" action="/cart/remove/<%= item.id %>" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-cart-message text-center py-5">
                        <p class="text-muted">Your cart is empty</p>
                        <a href="/" class="btn btn-primary mt-3">Continue Shopping</a>
                    </div>
                <% } %>
            </div>

            <!-- Cart Summary Section -->
            <div class="col-lg-4">
                <div class="cart-summary-box">
                    <h4 class="summary-title">TOTAL</h4>
                    
                    <% 
                        let subtotal = 0;
                        if (cartItems && cartItems.length > 0) {
                            cartItems.forEach(item => {
                                subtotal += (item.price * item.quantity);
                            });
                        }
                    %>

                    <div class="summary-content">
                        <div class="summary-row">
                            <span>Subtotal:</span>
                            <span class="amount"><%= subtotal.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></span>
                        </div>

                        <p class="shipping-note">*Shipping, taxes, and discount codes calculated at checkout.</p>

                        <% if (cartItems && cartItems.length > 0) { %>
                            <form action="/checkout" method="GET" class="mt-4">
                                <button type="submit" class="btn btn-primary w-100 mb-2">Proceed to checkout</button>
                            </form>
                            <a href="/" class="btn btn-outline-light w-100">Back to shopping</a>
                        <% } else { %>
                            <a href="/" class="btn btn-primary w-100 mt-4">Continue Shopping</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer-section mt-5">
        <div class="container-fluid">
            <div class="row py-5">
