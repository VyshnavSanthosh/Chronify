                    <div class="subscribe-box">
                        <input type="email" placeholder="Enter your email" class="form-control form-control-sm">
                        <button class="btn btn-sm btn-outline-light">‚û§</button>
                    </div>
                </div>

                <!-- Support Section -->
                <div class="col-md-2">
                    <h6 class="footer-title">Support</h6>
                    <ul class="footer-links">
                        <li><a href="#">9th Floor, Orian Business Park, Thane</a></li>
                        <li><a href="#">World Mumbai, Maharashtra</a></li>
                        <li><a href="mailto:necrollsales@gmail.com">necrollsales@gmail.com</a></li>
                        <li><a href="tel:+919226734588">+91 22 6734 588</a></li>
                    </ul>
                </div>

                <!-- Account Section -->
