<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In - ChronoMy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">

    <style>
        /* Fade out animation */
        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        .alert-dismissing {
            animation: fadeOut 0.5s ease-out forwards;
        }
    </style>
</head>

<body>
<div class="login-container">
    <div class="login-card">

        <!-- Login Heading -->
        <h1 class="login-heading">Vendor Log In</h1>

        <!-- Success Message -->
        <% if (query && query.reset === 'success') { %>
            <div class="alert alert-success mb-4" role="alert" id="successAlert">
                ✅ Password reset successful! Please login with your new password.
            </div>
        <% } %>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="alert alert-danger mb-4" role="alert" id="errorAlert">
                <%= error %>
            </div>
        <% } %>

        <!-- Login Form -->
        <form action="/vendor/auth/login" method="POST" class="login-form">

            <!-- Email -->
            <div class="form-group mb-4">
                <label for="email" class="form-label">Email address</label>
                <div class="input-wrapper">
                    <input
                        type="email"
                        class="form-control login-input"
                        id="email"
                        name="email"
                        placeholder="helloworld@gmail.com"
                        value="<%= email || '' %>"
                        required
                    >
                    <button type="button" class="input-icon clear-btn" onclick="clearEmail()">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <circle cx="8" cy="8" r="7" fill="#999"/>
                            <path d="M5 8H11M8 5V11" stroke="white" stroke-width="1.5"
                                  stroke-linecap="round"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Password -->
            <div class="form-group mb-2">
                <label for="password" class="form-label">Password</label>
                <div class="input-wrapper">
                    <input
                        type="password"
                        class="form-control login-input"
                        id="password"
                        name="password"
                        placeholder="••••••••"
                        required
                    >
                    <button type="button" class="input-icon toggle-password-btn" onclick="togglePassword()">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path d="M8 3C4 3 1.19 5.19 1 8c.19 2.81 3 5 7 5s6.81-2.19 7-5c-.19-2.81-3-5-7-5zm0 8c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"
                                  fill="#999"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Forgot Password -->
            <div class="text-end mb-4">
                <a href="/vendor/auth/forgot-password" class="forgot-password-link">
                    Forgot password?
                </a>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-login w-100 mb-3">
                Log In
            </button>

            <!-- Sign Up -->
            <div class="text-center mb-4">
                <span class="signup-text">
                    New user?
                    <a href="/vendor/auth/signup" class="signup-link">Sign up</a>
                </span>
            </div>

        </form>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Clear email
    function clearEmail() {
        const email = document.getElementById('email');
        email.value = '';
        email.focus();
    }

    // Toggle password visibility
    function togglePassword() {
        const input = document.getElementById('password');
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    // ✅ Auto-dismiss alerts EXACTLY in 3 seconds
    function autoDismiss(id) {
        const alertEl = document.getElementById(id);
        if (!alertEl) return;

        // Start fade at 2.5s
        setTimeout(() => {
            alertEl.classList.add('alert-dismissing');
        }, 1500);

        // Remove at 3s
        setTimeout(() => {
            alertEl.remove();
        }, 2000);
    }

    autoDismiss('successAlert');
    autoDismiss('errorAlert');
</script>

</body>
</html>
