<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vendor Dashboard | Chronify</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#0a1425",
                        secondary: "#050a14"
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-secondary text-white min-h-screen flex">

<!-- ================= SIDEBAR ================= -->
<aside class="w-64 bg-primary border-r border-gray-800 hidden md:flex flex-col">

    <div class="p-6 text-2xl font-bold border-b border-gray-800">
        Chronify
    </div>

    <nav class="flex-1 px-4 py-6 space-y-2 text-sm">

        <%
        const menuItems = [
            { name: "Dashboard", icon: "ðŸ ", route: "/vendor/dashboard", active: true },
            { name: "Products", icon: "ðŸ“¦", route: "/vendor/products" },
            { name: "Order List", icon: "ðŸ“‘", route: "/vendor/orders" },
            { name: "Category", icon: "ðŸ“‚", route: "/vendor/categories" },
            { name: "Profile", icon: "ðŸ‘¤", route: "/vendor/profile" },
            { name: "Wallet", icon: "ðŸ’³", route: "/vendor/wallet" },
            { name: "Return / Refund", icon: "â†©ï¸", route: "/vendor/returns" },
            { name: "Inventory Management", icon: "ðŸ“Š", route: "/vendor/inventory" }
        ];
        %>

        <% menuItems.forEach(item => { %>
            <a href="<%= item.route %>"
               class="block px-4 py-3 rounded-lg
               <%= item.active ? 'bg-gray-700' : 'hover:bg-gray-800' %>">
                <%= item.name %>
            </a>
        <% }) %>

    </nav>

    <div class="p-4">
        <a href="/logout"
           class="block text-center bg-white text-black rounded-md py-2 font-medium">
            Logout
        </a>
    </div>
</aside>

<!-- ================= MAIN ================= -->
<main class="flex-1 p-6">

    <!-- Header -->
    <div class="flex justify-end mb-6">
        <div class="text-right">

            <p class="text-xs text-gray-400">Vendor</p>
        </div>
    </div>

    <!-- ================= STATS ================= -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">

        <%
        const stats = [
            {
                label: "Total Customers",
                value: totalCustomers,
                sub: "16% this month",
                icon: `
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    d="M17 20h5v-2a4 4 0 00-4-4h-1M9 20H4v-2a4 4 0 014-4h1m4-4a4 4 0 100-8 4 4 0 000 8z"/>
                </svg>`
            },
            {
                label: "Total Orders",
                value: totalOrders,
                icon: `
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    d="M3 3h13l4 6v11a1 1 0 01-1 1h-2a2 2 0 11-4 0H9a2 2 0 11-4 0H3z"/>
                </svg>`
            },
            {
                label: "Total Sales",
                value: `â‚¹${totalSales}`,
                icon: `
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    d="M3 3v18h18M9 17V9m4 8V5m4 12v-6"/>
                </svg>`
            },
            {
                label: "Total Pending",
                value: totalPending,
                icon: `
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>`
            }
        ];
        %>

        <% stats.forEach(stat => { %>
            <div class="bg-primary border border-gray-700 rounded-xl p-5 flex gap-4">
                <div class="h-12 w-12 bg-blue-100 text-blue-700 rounded-full flex items-center justify-center">
                    <%- stat.icon %>
                </div>
                <div>
                    <p class="text-sm text-gray-400"><%= stat.label %></p>
                    <p class="text-xl font-semibold"><%= stat.value %></p>
                    <% if (stat.sub) { %>
                        <p class="text-xs text-green-400"><%= stat.sub %></p>
                    <% } %>
                </div>
            </div>
        <% }) %>

    </div>

    <!-- ================= ACTIVITY ================= -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <!-- Total Earnings (Compact) -->
        <div class="bg-primary border border-gray-700 rounded-xl px-6 py-4 h-fit">
            <div class="h-12 w-12 bg-green-100 text-green-700 rounded-full flex items-center justify-center mb-3">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    d="M12 8c-1.5 0-3 .8-3 2s1.5 2 3 2 3 .8 3 2-1.5 2-3 2m0-10v10"/>
                </svg>
            </div>
            <p class="text-sm text-gray-400">Total Earnings</p>
            <p class="text-2xl font-bold">â‚¹<%= totalEarnings %></p>
        </div>

        <!-- Activity Chart -->
        <div class="lg:col-span-2 bg-primary border border-gray-700 rounded-xl p-6 min-h-[420px]">

            <div class="flex justify-between items-center mb-6">
                <h2 class="text-lg font-semibold">Activity</h2>

                <!-- Dropdown -->
                <form method="GET" action="/vendor/dashboard">
                    <select name="range"
                            class="bg-secondary border border-gray-600 rounded-md px-3 py-1 text-sm">
                        <option value="week" <%= range === 'week' ? 'selected' : '' %>>Week</option>
                        <option value="month" <%= range === 'month' ? 'selected' : '' %>>Month</option>
                        <option value="year" <%= range === 'year' ? 'selected' : '' %>>Year</option>
                    </select>
                </form>
            </div>

            <!-- Chart -->
            <div class="flex items-end justify-between h-80">

                <% activityData.forEach(item => { %>
                    <div class="flex flex-col items-center gap-2">
                        <div class="w-8 bg-blue-600 rounded-md"
                             style="height:<%= item.value * 5 %>px">
                        </div>
                        <span class="text-xs text-gray-400"><%= item.day %></span>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>

</main>

</body>
</html>
