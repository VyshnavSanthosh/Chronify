<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Chronify</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #050a14;
        }
        .sidebar-item-active {
            background-color: #4b5563;
        }
        .custom-dark-card {
            background-color: #0a1425;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .input-dark {
            background-color: #f3f4f6; /* Very light gray/white as per image */
            color: #1f2937;
        }
        .input-outline-dark {
            background-color: transparent;
            border: 1px solid #1e293b;
            color: white;
        }
        .breadcrumb-item:not(:last-child)::after {
            content: '>';
            margin: 0 0.5rem;
            font-size: 0.75rem;
            color: #9ca3af;
        }
    </style>
</head>
<body class="text-white min-h-screen flex">

    <!-- Sidebar -->
    <aside class="w-64 bg-[#0a1425] flex flex-col border-r border-gray-800 hidden md:flex sticky top-0 h-screen">
        <div class="p-6">
            <h1 class="text-2xl font-bold tracking-widest text-white uppercase italic">
                Chronify
            </h1>
        </div>

        <nav class="flex-1 px-4 space-y-2">
            <a href="/dashboard" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-house w-5 text-center"></i>
                    <span class="text-sm font-medium">Dashboard</span>
                </div>
            </a>

            <a href="/products" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors sidebar-item-active text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-briefcase w-5 text-center"></i>
                    <span class="text-sm font-medium">Products</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/orders" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-list-ul w-5 text-center"></i>
                    <span class="text-sm font-medium">Order List</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/categories" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-table-cells-large w-5 text-center"></i>
                    <span class="text-sm font-medium">Category</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/profile" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-circle-user w-5 text-center"></i>
                    <span class="text-sm font-medium">Profile</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/wallet" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-wallet w-5 text-center"></i>
                    <span class="text-sm font-medium">Wallet</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/returns" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-list-check w-5 text-center"></i>
                    <span class="text-sm font-medium">Return/Refund List</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>

            <a href="/inventory" class="flex items-center justify-between px-4 py-3 rounded-lg transition-colors text-gray-400 hover:bg-gray-800 hover:text-white">
                <div class="flex items-center space-x-3">
                    <i class="fa-solid fa-toolbox w-5 text-center"></i>
                    <span class="text-sm font-medium">Inventory Management</span>
                </div>
                <i class="fa-solid fa-chevron-right text-[10px]"></i>
            </a>
        </nav>

        <div class="p-6">
            <button class="w-full py-2 bg-white text-black font-semibold rounded-md hover:bg-gray-200 transition-colors">
                Logout
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col">
        
        <!-- Header -->
        <header class="h-16 flex items-center justify-end px-8 border-b border-gray-800">
            <div class="flex items-center space-x-3">
                <div class="text-right">
                    <p class="text-sm font-semibold"><%= locals.userName || 'Vyshnav' %></p>
                    <p class="text-xs text-gray-400 uppercase tracking-tighter"><%= locals.userRole || 'Vendor' %></p>
                </div>
                <img src="<%= locals.userAvatar || '/placeholder.svg?height=40&width=40' %>" alt="Profile" class="w-10 h-10 rounded-full border border-teal-400">
            </div>
        </header>

        <!-- Content Area -->
        <div class="flex-1 p-8 md:p-12 overflow-y-auto">
            
            <!-- Breadcrumbs -->
            <nav class="flex items-center space-x-1 text-sm text-gray-400 mb-6">
                <span class="breadcrumb-item">Dashboard</span>
                <span class="breadcrumb-item">products</span>
                <span class="text-gray-200">add product</span>
            </nav>

            <h2 class="text-2xl font-bold mb-8">Product Details</h2>

            <form action="/add-product" method="POST" class="space-y-12 pb-12">
                
                <!-- Section 1: General Information -->
                <div class="custom-dark-card rounded-3xl p-8 md:p-10 shadow-xl space-y-8">
                    <h3 class="text-xl font-semibold">General Information</h3>
                    
                    <div class="space-y-6">
                        <!-- Product Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-300 mb-2">Product Name</label>
                            <input type="text" name="productName" placeholder="Type product name here. . ." 
                                   class="w-full input-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-sm font-medium text-gray-300 mb-2">Description</label>
                            <textarea name="description" rows="5" 
                                      class="w-full input-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">Update your everyday watch collection with this cool and comfy . The regular fit lends you an easygoing look and with our breathable shirts in 100% cotton, comfort is no longer reserved for the weekends.</textarea>
                        </div>

                        <!-- Category -->
                        <div class="w-full md:w-1/2">
                            <label class="block text-sm font-medium text-gray-300 mb-4">Select category</label>
                            <div class="relative">
                                <select name="category" class="w-full bg-transparent border border-gray-700 text-white px-4 py-3 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <% if (locals.categories) { %>
                                        <% locals.categories.forEach(cat => { %>
                                            <option value="<%= cat._id || cat.id %>"><%= cat.name %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option value="automatic">Automatic</option>
                                        <option value="quartz">Quartz</option>
                                        <option value="manual">Manual</option>
                                    <% } %>
                                </select>
                                <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-gray-400">
                                    <i class="fa-solid fa-chevron-down text-sm"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Product Variant 1 -->
                <div id="variants-container" class="space-y-12">
                    <div class="variant-section custom-dark-card rounded-3xl p-8 md:p-10 shadow-xl space-y-10 relative group" data-variant-index="0">
                        <!-- Added a remove button that only shows on additional variants (hidden on the first one) -->
                        <button type="button" class="remove-variant-btn absolute top-8 right-8 text-red-500 hover:text-red-700 hidden">
                            <i class="fa-solid fa-trash-can text-xl"></i>
                        </button>
                        
                        <h3 class="text-lg font-bold uppercase tracking-widest text-gray-300">PRODUCT Variant <span class="variant-number">1</span></h3>
                        
                        <div class="space-y-10">
                            <!-- Photos Section -->
                            <div class="space-y-6">
                                <h4 class="text-sm font-medium text-gray-400">Main Photo</h4>
                                
                                <!-- Main Image Upload -->
                                <div class="w-full max-w-2xl mx-auto bg-white rounded-xl p-12 text-center border-2 border-dashed border-gray-300 flex flex-col items-center justify-center space-y-4 relative overflow-hidden group">
                                    <input type="file" name="variant[0][mainImage]" class="hidden main-image-input" accept="image/*">
                                    <div class="preview-container absolute inset-0 hidden">
                                        <img src="/placeholder.svg" class="w-full h-full object-contain">
                                    </div>
                                    <div class="upload-placeholder flex flex-col items-center space-y-4">
                                        <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                                            <i class="fa-solid fa-image text-indigo-500 text-xl"></i>
                                        </div>
                                        <p class="text-sm text-gray-500">Drag and drop image here, or click add image</p>
                                    </div>
                                    <button type="button" class="upload-btn px-6 py-2 bg-indigo-100 text-indigo-600 font-semibold rounded-lg hover:bg-indigo-200 transition-colors z-10">
                                        upload image
                                    </button>
                                </div>

                                <h4 class="text-sm font-medium text-gray-400">Additional</h4>
                                
                                <!-- Additional Images Grid -->
                                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                                    <% for(let i=0; i<3; i++) { %>
                                    <div class="bg-white rounded-xl p-6 text-center border border-gray-200 flex flex-col items-center justify-center space-y-3 relative overflow-hidden group h-40">
                                        <input type="file" name="variant[0][additionalImages]" class="hidden additional-image-input" accept="image/*">
                                        <div class="preview-container absolute inset-0 hidden">
                                            <img src="/placeholder.svg" class="w-full h-full object-contain">
                                        </div>
                                        <div class="upload-placeholder flex flex-col items-center space-y-3">
                                            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                                                <i class="fa-solid fa-image text-indigo-500"></i>
                                            </div>
                                            <p class="text-[10px] text-gray-500 leading-tight">Drag and drop image here, or click add image</p>
                                        </div>
                                        <button type="button" class="upload-btn px-4 py-1.5 bg-indigo-100 text-indigo-600 text-xs font-bold rounded-lg hover:bg-indigo-200 transition-colors z-10">
                                            upload image
                                        </button>
                                    </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Variant Details Grid -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
                                <div>
                                    <label class="block text-sm font-medium text-gray-300 mb-2">Price:</label>
                                    <input type="text" name="variant[0][price]" class="w-full input-outline-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-300 mb-2">Add colour</label>
                                    <input type="text" name="variant[0][color]" value="Silver" class="w-full input-outline-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-300 mb-2">Stock Quantity</label>
                                    <input type="text" name="variant[0][stock]" value="450" class="w-full input-outline-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-500">
                                </div>
                                <div>
                                    <!-- Replaced the Strap Material dropdown with a text input box -->
                                    <label class="block text-sm font-medium text-gray-300 mb-2">Select Strap Material</label>
                                    <input type="text" name="variant[0][strapMaterial]" value="Metal" placeholder="e.g. Metal, Leather" class="w-full input-outline-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-500">
                                </div>
                                <div class="md:w-1/2">
                                    <label class="block text-sm font-medium text-gray-300 mb-2">Offer</label>
                                    <input type="text" name="variant[0][offer]" value="10%" class="w-full input-outline-dark px-4 py-3 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add Variant Button -->
                <div class="flex justify-center">
                    <button type="button" id="add-variant-btn" class="px-10 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition-colors shadow-lg">
                        ADD ANOTHER VARIENT
                    </button>
                </div>

                <!-- Section 3: Product Specifications -->
                <div class="space-y-6">
                    <h3 class="text-xl font-semibold">Product Specifications</h3>
                    <div class="custom-dark-card rounded-3xl p-8 md:p-10 shadow-xl space-y-10">
                        <div>
                            <label class="block text-sm font-medium text-gray-300 mb-2">Weight</label>
                            <input type="text" name="weight" value="150g" class="w-full input-dark px-4 py-3 rounded-lg focus:outline-none">
                        </div>

                        <!-- Specifications List -->
                        <div class="bg-white rounded-3xl p-6 md:p-10 space-y-4">
                            <% 
                                const specs = locals.specifications || [
                                    'Dial Color: Matt Black,Dial Material: Arabic Numerals',
                                    'Closure: Double Fold Over Clasp',
                                    'Water Resistance: 50 meters / 165 feet'
                                ];
                            %>
                            <% specs.forEach((spec, index) => { %>
                            <div class="w-full bg-gray-100 text-gray-500 px-6 py-4 rounded-xl text-sm">
                                <%= spec %>
                            </div>
                            <% }); %>

                            <div class="flex justify-center pt-6">
                                <button type="button" class="px-10 py-3 bg-black text-white text-xs font-bold uppercase tracking-widest rounded-lg hover:bg-gray-900 transition-colors">
                                    add related information
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Final Actions -->
                <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-4 pt-8">
                    <button type="submit" class="w-full sm:w-auto px-16 py-4 bg-blue-600 text-white font-bold rounded-xl hover:bg-blue-700 transition-colors shadow-xl">
                        ADD PRODUCT
                    </button>
                    <button type="button" class="w-full sm:w-auto px-16 py-4 bg-black text-red-600 font-bold border border-red-900 rounded-xl hover:bg-gray-900 transition-colors">
                        CANCEL
                    </button>
                </div>

            </form>
        </div>
    </main>

    <!-- JavaScript for image uploads and dynamic variant cloning -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('variants-container');
            const addBtn = document.getElementById('add-variant-btn');
            let variantCount = document.querySelectorAll('.variant-section').length;

            // Handle image upload triggers and previews
            function initUploadLogic(scope) {
                const uploadAreas = scope.querySelectorAll('.upload-btn');
                uploadAreas.forEach(btn => {
                    const parent = btn.parentElement;
                    const input = parent.querySelector('input[type="file"]');
                    const preview = parent.querySelector('.preview-container');
                    const img = preview.querySelector('img');
                    const placeholder = parent.querySelector('.upload-placeholder');

                    btn.onclick = () => input.click();

                    input.onchange = (e) => {
                        const file = e.target.files[0];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = (event) => {
                                img.src = event.target.result;
                                preview.classList.remove('hidden');
                                placeholder.classList.add('opacity-0');
                                btn.textContent = 'change image';
                            };
                            reader.readAsDataURL(file);
                        }
                    };
                });
            }

            initUploadLogic(document);

            // Add Another Variant logic
            addBtn.addEventListener('click', () => {
                const original = document.querySelector('.variant-section');
                const clone = original.cloneNode(true);
                
                // Update index and labels
                variantCount++;
                clone.dataset.variantIndex = variantCount - 1;
                clone.querySelector('.variant-number').textContent = variantCount;
                
                const removeBtn = clone.querySelector('.remove-variant-btn');
                removeBtn.classList.remove('hidden');
                removeBtn.onclick = () => {
                    clone.remove();
                    reindexVariants();
                };
                
                // Clear inputs and previews in clone
                clone.querySelectorAll('input').forEach(input => {
                    input.value = '';
                    // Update name attribute index
                    if (input.name) {
                        input.name = input.name.replace(/\[\d+\]/, `[${variantCount - 1}]`);
                    }
                });
                
                clone.querySelectorAll('.preview-container').forEach(pc => pc.classList.add('hidden'));
                clone.querySelectorAll('.upload-placeholder').forEach(up => up.classList.remove('opacity-0'));
                clone.querySelectorAll('.upload-btn').forEach(ub => ub.textContent = 'upload image');

                container.appendChild(clone);
                initUploadLogic(clone);
            });

            function reindexVariants() {
                const variants = document.querySelectorAll('.variant-section');
                variantCount = variants.length;
                variants.forEach((v, index) => {
                    v.dataset.variantIndex = index;
                    v.querySelector('.variant-number').textContent = index + 1;
                    v.querySelectorAll('input').forEach(input => {
                        if (input.name) {
                            input.name = input.name.replace(/\[\d+\]/, `[${index}]`);
                        }
                    });
                });
            }
        });
    </script>
</body>
</html>
