<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Upload Documents</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-[#050a14] relative text-white">

  <!-- Background Dashboard (blurred) -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#0a1425] to-[#020617] blur-md opacity-90"></div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/40"></div>

  <!-- Modal Container -->
  <div class="relative z-10 flex items-center justify-center min-h-screen px-4">

    <div class="bg-white text-gray-900 w-full max-w-[500px] rounded-xl shadow-2xl p-8">

      <!-- Heading -->
      <h2 class="text-xl font-semibold text-center mb-6">
        Upload Your Documents
      </h2>

      <!-- Loading Spinner (hidden by default) -->
      <div id="loadingSpinner" class="hidden text-center mb-6">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-gray-300 border-t-blue-600"></div>
        <p class="mt-2 text-sm text-gray-600">Uploading documents...</p>
      </div>

      <!-- Error Message (hidden by default) -->
      <div id="errorMessage" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
        <p class="font-semibold text-sm">Upload Failed</p>
        <p id="errorText" class="text-sm mt-1"></p>
      </div>

      <!-- Success Message (hidden by default) -->
      <div id="successMessage" class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
        <p class="font-semibold text-sm">âœ“ Documents uploaded successfully!</p>
        <p id="successText" class="text-sm mt-1"></p>
      </div>

      <!-- Form -->
      <form id="uploadForm" class="space-y-5">

        <!-- GST + PAN -->
        <div class="grid grid-cols-2 gap-4">
          
          <!-- GST Document -->
          <div>
            <label class="block text-sm font-medium mb-2 text-gray-700">
              GST Document
              <span class="text-xs text-gray-500">(PDF)</span>
            </label>
            <label class="flex items-center justify-center border-2 border-dashed border-gray-300 rounded-lg py-4 px-2 cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition">
              <input 
                type="file" 
                name="gstDocument" 
                accept=".pdf"
                class="hidden"
              >
              <div class="text-center">
                <svg class="mx-auto h-5 w-5 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="text-xs text-gray-600">Upload</span>
              </div>
            </label>
            <p class="text-xs text-gray-500 mt-1" id="gstFile">No file selected</p>
          </div>

          <!-- PAN Card -->
          <div>
            <label class="block text-sm font-medium mb-2 text-gray-700">
              PAN Card
              <span class="text-xs text-gray-500">(PDF)</span>
            </label>
            <label class="flex items-center justify-center border-2 border-dashed border-gray-300 rounded-lg py-4 px-2 cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition">
              <input 
                type="file" 
                name="panCard" 
                accept=".pdf"
                class="hidden"
              >
              <div class="text-center">
                <svg class="mx-auto h-5 w-5 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="text-xs text-gray-600">Upload</span>
              </div>
            </label>
            <p class="text-xs text-gray-500 mt-1" id="panFile">No file selected</p>
          </div>

        </div>

        <!-- Trade License -->
        <div>
          <label class="block text-sm font-medium mb-2 text-gray-700">
            Trade License
            <span class="text-xs text-gray-500">(PDF)</span>
          </label>
          <label class="flex items-center justify-center border-2 border-dashed border-gray-300 rounded-lg py-4 px-2 cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition">
            <input 
              type="file" 
              name="tradeLicense" 
              accept=".pdf"
              class="hidden"
            >
            <div class="text-center">
              <svg class="mx-auto h-5 w-5 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span class="text-xs text-gray-600">Upload</span>
            </div>
          </label>
          <p class="text-xs text-gray-500 mt-1" id="licenseFile">No file selected</p>
        </div>

        <!-- File Size Note -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
          <p class="text-xs text-blue-700">
            <strong>Note:</strong> Maximum file size is 5MB per document. Only PDF files are accepted.
          </p>
        </div>

        <!-- Action Button -->
        <div class="flex justify-end gap-3 pt-2">
          <button
            type="reset"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg font-medium transition"
          >
            Clear
          </button>
          <button
            type="submit"
            id="submitBtn"
            class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Upload
          </button>
        </div>

      </form>
    </div>
  </div>

  <script>
    // Get form elements
    const form = document.getElementById('uploadForm');
    const submitBtn = document.getElementById('submitBtn');
    const loadingSpinner = document.getElementById('loadingSpinner');
    const errorMessage = document.getElementById('errorMessage');
    const errorText = document.getElementById('errorText');
    const successMessage = document.getElementById('successMessage');
    const successText = document.getElementById('successText');

    // File input display names
    const fileInputs = {
      gstDocument: document.querySelector('input[name="gstDocument"]'),
      panCard: document.querySelector('input[name="panCard"]'),
      tradeLicense: document.querySelector('input[name="tradeLicense"]')
    };

    // Update file name display when file is selected
    Object.entries(fileInputs).forEach(([name, input]) => {
      input.addEventListener('change', (e) => {
        const fileName = e.target.files[0]?.name || 'No file selected';
        const displayElement = document.getElementById(name === 'tradeLicense' ? 'licenseFile' : (name === 'gstDocument' ? 'gstFile' : 'panFile'));
        displayElement.textContent = fileName;
      });
    });

    // Handle form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Reset messages
      errorMessage.classList.add('hidden');
      successMessage.classList.add('hidden');

      // Validate at least one file is selected
      const files = form.querySelectorAll('input[type="file"]');
      const hasFile = Array.from(files).some(input => input.files.length > 0);

      if (!hasFile) {
        errorText.textContent = 'Please select at least one document to upload';
        errorMessage.classList.remove('hidden');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      loadingSpinner.classList.remove('hidden');

      try {
        // Create FormData
        const formData = new FormData(form);

        // Send request
        const response = await fetch('/vendor/profile/uploads', {
          method: 'POST',
          body: formData,
          headers: {
            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`
          }
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.message || 'Upload failed');
        }

        // Success
        successText.textContent = data.message || 'All documents uploaded successfully!';
        successMessage.classList.remove('hidden');
        form.reset();

        // Reset file name displays
        Object.keys(fileInputs).forEach(name => {
          const displayElement = document.getElementById(name === 'tradeLicense' ? 'licenseFile' : (name === 'gstDocument' ? 'gstFile' : 'panFile'));
          displayElement.textContent = 'No file selected';
        });

        // Optional: Redirect after 2 seconds
        setTimeout(() => {
          // window.location.href = '/vendor/profile';
        }, 2000);

      } catch (error) {
        errorText.textContent = error.message || 'An error occurred during upload. Please try again.';
        errorMessage.classList.remove('hidden');
        console.error('Upload error:', error);
      } finally {
        submitBtn.disabled = false;
        loadingSpinner.classList.add('hidden');
      }
    });

    // Optional: Prevent form submission on Enter
    form.addEventListener('keypress', (e) => {
      if (e.key === 'Enter' && e.target !== submitBtn) {
        e.preventDefault();
      }
    });
  </script>

</body>
</html>