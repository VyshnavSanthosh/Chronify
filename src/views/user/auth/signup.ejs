<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - ChronoMy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/signup.css">

    <style>
        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        .alert-dismissing {
            animation: fadeOut 0.5s ease-out forwards;
        }
    </style>
</head>

<body>
<div class="signup-container">
    <div class="signup-card">

        <h1 class="signup-heading">Create Account</h1>

        <!-- General Error -->
        <% if (errors && errors.general) { %>
            <div 
                class="alert alert-danger mb-4"
                role="alert"
                id="generalError">
                <%= errors.general %>
            </div>
        <% } %>

        <form action="/auth/signup" method="POST" id="signupForm" class="signup-form">

            <!-- Name -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">First Name</label>
                    <input class="form-control signup-input" name="firstName" value="<%= firstName || '' %>">
                    <% if (errors?.firstName) { %>
                        <div class="error-text"><%= errors.firstName %></div>
                    <% } %>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Last Name</label>
                    <input class="form-control signup-input" name="lastName" value="<%= lastName || '' %>">
                    <% if (errors?.lastName) { %>
                        <div class="error-text"><%= errors.lastName %></div>
                    <% } %>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                    type="email"
                    class="form-control signup-input"
                    name="email"
                    placeholder="john.doe@example.com"
                    value="<%= email || '' %>"
                >
                <% if (errors?.email) { %>
                    <div class="error-text"><%= errors.email %></div>
                <% } %>
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label class="form-label">Phone</label>
                <input
                    type="tel"
                    class="form-control signup-input"
                    name="phone"
                    maxlength="10"
                    value="<%= phone || '' %>"
                >
                <% if (errors?.phone) { %>
                    <div class="error-text"><%= errors.phone %></div>
                <% } %>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control signup-input" name="password">
                <small class="text-white">* At least 8 characters</small>
                <% if (errors?.password) { %>
                    <div class="error-text"><%= errors.password %></div>
                <% } %>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control signup-input" name="confirmPassword">
                <% if (errors?.confirmPassword) { %>
                    <div class="error-text"><%= errors.confirmPassword %></div>
                <% } %>
            </div>

            <!-- Referral -->
            <div class="mb-4">
                <input
                    class="form-control signup-input"
                    name="referralCode"
                    placeholder="Referral Code (optional)">
            </div>

            <button type="submit" class="btn btn-signup w-100 mb-3">
                Create Account
            </button>

            <div class="text-center mb-4">
                Already have an account?
                <a href="/auth/login" class="login-link">Log in</a>
            </div>

            <a href="/auth/google" class="btn btn-google w-100">Sign up with Google</a>
        </form>

        <p class="terms-text">
            By signing up, you agree to our
            <a href="/terms">Terms</a> and <a href="/privacy">Privacy Policy</a>
        </p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // âœ… Auto-dismiss general error EXACTLY in 3 seconds
    const generalError = document.getElementById("generalError");

    if (generalError) {
        // Start fade at 2.5s
        setTimeout(() => {
            generalError.classList.add("alert-dismissing");
        }, 1500);

        // Remove at 3s
        setTimeout(() => {
            generalError.remove();
        }, 2000);
    }
</script>

</body>
</html>
