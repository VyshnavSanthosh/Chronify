<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password | ChronoMy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/forgotPassword.css">

    <style>
        /* Fade-out animation */
        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        .fade-out {
            animation: fadeOut 0.5s ease-out forwards;
        }
    </style>
</head>

<body class="forgot-password-page">
<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
    <div class="forgot-password-container">

        <!-- Heading -->
        <h1 class="text-center text-white mb-5">Forgot Password?</h1>

        <!-- Error -->
        <% if (error) { %>
            <div
                class="alert alert-danger mb-4"
                role="alert"
                id="errorAlert">
                <%= error %>
            </div>
        <% } %>

        <!-- Form -->
        <form id="forgotPasswordForm" method="POST" action="/auth/forgot-password">

            <label class="form-label text-white mb-3">
                Enter your registered email
            </label>

            <input
                type="email"
                class="form-control forgot-password-input mb-4"
                id="email"
                name="email"
                placeholder="helloworld@gmail.com"
                required
                value="<%= email || '' %>"
            >

            <button type="submit" class="btn btn-verify-email w-100 mb-3">
                Verify Email
            </button>
        </form>

        <!-- Back to login -->
        <div class="text-center">
            <p class="text-muted">
                Remember your password?
                <a href="/auth/login" class="text-white text-decoration-none back-to-login">
                    Log In
                </a>
            </p>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // âœ… Auto-dismiss error EXACTLY in 3 seconds
    const errorAlert = document.getElementById("errorAlert");

    if (errorAlert) {
        // Start fade at 2.5s
        setTimeout(() => {
            errorAlert.classList.add("fade-out");
        }, 1500);

        // Remove at 3s
        setTimeout(() => {
            errorAlert.remove();
        }, 2000);
    }

    // Form validation
    document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
        const email = document.getElementById('email').value;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        if (!emailRegex.test(email)) {
            e.preventDefault();
            alert('Please enter a valid email address');
        }
    });
</script>

</body>
</html>
